<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>addUser</servlet-name>
        <servlet-class>ru.nstu.forser.servlets.AddUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addUser</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addEmployee</servlet-name>
        <servlet-class>ru.nstu.forser.servlets.AddEmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addEmployee</servlet-name>
        <url-pattern>/addEmployee</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>adminList</servlet-name>
        <servlet-class>ru.nstu.forser.servlets.AdminListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminList</servlet-name>
        <url-pattern>/adminList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userList</servlet-name>
        <servlet-class>ru.nstu.forser.servlets.UserListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userList</servlet-name>
        <url-pattern>/userList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>ru.nstu.forser.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>ru.nstu.forser.servlets.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>user</servlet-name>
        <servlet-class>ru.nstu.forser.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>ru.nstu.forser.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchServlet</servlet-name>
        <servlet-class>ru.nstu.forser.servlets.LastNameSearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchServlet</servlet-name>
        <url-pattern>/searchByLastName</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>departmentSearchServlet</servlet-name>
        <servlet-class>ru.nstu.forser.servlets.DepartmentSearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>departmentSearchServlet</servlet-name>
        <url-pattern>/searchByDepartment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchByNameForm</servlet-name>
        <servlet-class>ru.nstu.forser.servlets.SearchByNameForm</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchByNameForm</servlet-name>
        <url-pattern>/searchByName</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchByDepForm</servlet-name>
        <servlet-class>ru.nstu.forser.servlets.SearchByDepForm</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchByDepForm</servlet-name>
        <url-pattern>/searchByDepForm</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>userFilter</filter-name>
        <filter-class>ru.nstu.forser.filters.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>userFilter</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>adminFilter</filter-name>
        <filter-class>ru.nstu.forser.filters.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>adminFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

</web-app>